<Window x:Class="SportSchool.AddSectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportSchool"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Icon="C:\Users\Alexander\Documents\Visual Studio 2015\Projects\SportSchool\SportSchool\icon.ico"
        Title="AddSectionWindow" Height="150" Width="500">
    <Grid>
        <Image x:Name="BG_jpg" Margin="-36,-346,-14,-129" Source="BG.jpg" Stretch="Fill"/>
        <Label x:Name="SectionWarningLbl" Foreground="Red" Margin="130,30,0,0"/>
        <Label x:Name="SectionAddedLbl" Foreground="Green" Margin="130,55,0,0"/>
        <StackPanel HorizontalAlignment="Left" Margin="10,0,0,0">
            <Label Content="Название секции" Width="120" Height="30" VerticalContentAlignment="Center"/>
            <TextBox x:Name="SectionNameTB" Width="120" Height="20"/>
            <Button x:Name="AddSectionBtn" Content="Добавить секцию" Width="120" Height="20" Click="AddSection_Click" Margin="0,5,0,0"/>
        </StackPanel>
    </Grid>
</Window>
